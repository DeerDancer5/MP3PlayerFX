<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane onDragDropped="#handleFileDroppedEvent" onDragOver="#handleFileOverEvent" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mp3playerfx.controller.PlayerController">
   <TabPane prefHeight="315.0" prefWidth="552.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Player">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="229.0" prefWidth="284.0">
                  <children>
                  <VBox alignment="CENTER" prefHeight="300.0" prefWidth="552.0" spacing="20.0" style="-fx-spacing: 20;">
                      <padding>
                          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                      </padding>
                        <StackPane prefHeight="101.0" prefWidth="512.0" style="-fx-background-color: #0c0c0c;">
                           <children>
                        
                                        <Label fx:id="songLabel" textFill="#f80000">
                              <font>
                                 <Font size="24.0" />
                              </font>
                              </Label>
                           </children>
                        </StackPane>
                     <ProgressBar fx:id="progressBar" prefHeight="28.0" prefWidth="512.0" progress="0.0" />
                     <HBox alignment="CENTER" prefHeight="34.0" prefWidth="512.0" style="-fx-spacing: 60;">
                        <children>
                           <Slider fx:id="volumeSlider" max="100.0" prefHeight="16.0" prefWidth="178.0" value="50.0" />
                           <ComboBox fx:id="speedBox" onAction="#changeSpeed" prefWidth="150.0" promptText="Speed" />
                        </children>
                     </HBox>
                     <HBox alignment="CENTER" prefHeight="91.0" prefWidth="512.0">
                        <children>
                           <Button fx:id="prevButton" onAction="#onPreviousClick" text="&lt;&lt;" textAlignment="CENTER" />
                           <StackPane prefHeight="66.0" prefWidth="88.0">
                              <children>
                                  <Button fx:id="playButton" onAction="#onPlayClick" prefHeight="24.0" prefWidth="90.0" text="Play" textAlignment="CENTER" />
                                 <Button fx:id="pauseButton" onAction="#onPauseClick" prefHeight="24.0" prefWidth="90.0" text="Pause" textAlignment="CENTER" />
                              </children>
                           </StackPane>
                           <Button fx:id="resetButton" onAction="#onResetClick" prefWidth="91.0" text="Stop" textAlignment="CENTER" />
                           <Button fx:id="nextButton" onAction="#onNextClick" text="&gt;&gt;" textAlignment="CENTER" />
                        </children>
                     </HBox>
                  </VBox>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab text="Playlist">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="263.0" prefWidth="552.0">
                  <children>
                     <VBox prefHeight="285.0" prefWidth="552.0">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="23.0" prefWidth="552.0" style="-fx-spacing: 134; -fx-padding: 1 0 1 10; -fx-background-color: #DCDCDC;">
                              <children>
                                 <Label text="Title         " />
                                 <Label text="Artist" />
                                 <Label text="Album" />
                              </children>
                           </HBox>
                           <ListView fx:id="playlistView" focusTraversable="false" onDragExited="#initializeDragAndDrop" onMouseClicked="#handleDoubleClickPlaylistEvent" prefHeight="223.0" prefWidth="552.0" />
                           <HBox alignment="CENTER" prefHeight="34.0" prefWidth="552.0" style="-fx-spacing: 20;">
                              <children>
                                 <Button fx:id="readPlaylist" mnemonicParsing="false" onAction="#readPlaylist" text="Load" />
                                 <Button mnemonicParsing="false" onAction="#savePlaylist" text="Save" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
         <Tab text="Library">
            <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="263.0" prefWidth="552.0">
                  <children>
                     <VBox prefHeight="285.0" prefWidth="552.0">
                        <children>
                           <HBox alignment="CENTER" prefHeight="46.0" prefWidth="552.0" style="-fx-spacing: 20;">
                              <children>
                                 <Label text="Sort by:" />
                                 <RadioButton fx:id="nameButton" mnemonicParsing="false" onAction="#sortLibrary" text="Name">
                                    <toggleGroup>
                                       <ToggleGroup fx:id="sort" />
                                    </toggleGroup></RadioButton>
                                 <RadioButton fx:id="artistButton" mnemonicParsing="false" onAction="#sortLibrary" text="Artist" toggleGroup="$sort" />
                                 <RadioButton fx:id="albumButton" mnemonicParsing="false" onAction="#sortLibrary" text="Album" toggleGroup="$sort" />
                              </children>
                           </HBox>
                           <ListView fx:id="libraryView" focusTraversable="false" onMouseClicked="#handleDoubleClickLibraryEvent" prefHeight="270.0" prefWidth="552.0" />
                        </children>
                     </VBox>
                  </children>
               </AnchorPane>
            </content>
         </Tab>
     </tabs>
   </TabPane>
</StackPane>
