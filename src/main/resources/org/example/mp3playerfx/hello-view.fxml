<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="552.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mp3playerfx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="songLabel" text="somemusic.mp3">
      <font>
         <Font size="36.0" />
      </font></Label>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 60;">
      <children>
         <Slider fx:id="volumeSlider" max="100.0" prefHeight="16.0" prefWidth="178.0" value="50.0" />
         <ComboBox fx:id="speedBox" onAction="#changeSpeed" prefWidth="150.0" promptText="Speed" />
      </children>
   </HBox>
   <ProgressBar fx:id="progressBar" prefHeight="42.0" prefWidth="391.0" progress="0.0" />
   <HBox alignment="CENTER" prefHeight="91.0" prefWidth="512.0">
      <children>
         <Button fx:id="prevButton" onAction="#onPreviousClick" text="&lt;&lt;" textAlignment="CENTER" />
         <StackPane prefHeight="66.0" prefWidth="88.0">
            <children>
                <Button fx:id="playButton" onAction="#onPlayClick" prefHeight="24.0" prefWidth="90.0" text="Play" textAlignment="CENTER" />
               <Button fx:id="pauseButton" onAction="#onPauseClick" prefHeight="24.0" prefWidth="90.0" text="Pause" textAlignment="CENTER" />
            </children>
         </StackPane>
         <Button fx:id="resetButton" onAction="#onResetClick" prefWidth="91.0" text="Stop" textAlignment="CENTER" />
         <Button fx:id="nextButton" onAction="#onNextClick" text="&gt;&gt;" textAlignment="CENTER" />
      </children>
   </HBox>
</VBox>
