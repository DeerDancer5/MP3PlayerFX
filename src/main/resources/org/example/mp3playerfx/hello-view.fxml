<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="552.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mp3playerfx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="somemusic.mp3">
      <font>
         <Font size="36.0" />
      </font></Label>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 40;">
      <children>
         <Slider fx:id="volumeSlider" prefHeight="16.0" prefWidth="178.0" />
         <ComboBox fx:id="speedBox" prefWidth="150.0" promptText="Speed" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="93.0" prefWidth="512.0">
      <children>
          <Button fx:id="playButton" onAction="#onPlayClick" prefHeight="24.0" prefWidth="90.0" text="Play" textAlignment="CENTER" />
         <Button fx:id="pauseButton" onAction="#onPauseClick" prefHeight="24.0" prefWidth="90.0" text="Pause" textAlignment="CENTER" />
         <Button fx:id="resetButton" onAction="#onResetClick" prefWidth="91.0" text="Reset" textAlignment="CENTER" />
         <Button fx:id="prevButton" onAction="#onPreviousClick" text="Previous" textAlignment="CENTER" />
         <Button fx:id="nextButton" onAction="#onNextClick" text="Next" textAlignment="CENTER" />
      </children>
   </HBox>
</VBox>
